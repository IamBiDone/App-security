@page
@model WebApplication3.Pages.VerificationModel
<h3>Verify OTP</h3>

<div class="row justify-content-center align-items-center">

    <div class="col-sm-12 col-md-12 col-lg-4">
        <h1 class="mb-3">Enter Verification Code </h1>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="VModel.OTP">Verification Code</label>
                <input type="Text" asp-for="VModel.OTP" class="form-control" />
                <span asp-validation-for="VModel.OTP" class="text-danger"></span>
            </div>



            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

    </div>
</div>


@{
}
