@page
@model WebApplication3.Pages.LoginModel
@{

    <h3>Login Form</h3>

    <div class="row justify-content-center align-items-center">

        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login </h1>

            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label" asp-for="LModel.FullName">Full Name</label>
                    <input type="Text" asp-for="LModel.FullName" class="form-control" />
                    <span asp-validation-for="LModel.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="LModel.Password">Password</label>
                    <input  type="text" asp-for="LModel.Password" class="form-control" />
                    <span asp-validation-for="LModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

            <div class="mb-3">
                <p>Don't have an account? <a href="/Register">Register</a></p>
            </div>

            <div class="mb-3">
                <p>Forgot your password? <a href="/AccountRecovery">Account Recovery</a></p>
            </div>
        </div>
    </div>


}